{
    "name": "sgs_be",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "nodemon --env-file=.env.dev src/index.js",
        "staging": "node --env-file=.env.staging src/index.js",
        "prod": "node --env-file=.env.prod src/index.js",
        "start": "node src/index.js",
        "db:migrate:dev": "dotenv -e .env.dev -- npx prisma migrate dev",
        "db:migrate:staging": "dotenv -e .env.staging -- npx prisma migrate deploy",
        "db:migrate:prod": "dotenv -e .env.prod -- npx prisma migrate deploy",
        "db:generate": "npx prisma generate",
        "db:studio:dev": "dotenv -e .env.dev -- npx prisma studio",
        "db:studio:staging": "dotenv -e .env.staging -- npx prisma studio",
        "db:seed": "dotenv -e .env.dev -- node prisma/seed.js"
    },
    "dependencies": {
        "@prisma/adapter-pg": "^7.0.0",
        "@prisma/client": "^6.19.0",
        "@sentry/node": "^7.0.0",
        "axios": "^1.13.2",
        "bcrypt": "^6.0.0",
        "bcryptjs": "^3.0.3",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "ioredis": "^5.3.2",
        "jsonwebtoken": "^9.0.2",
        "nodemailer": "^7.0.10",
        "p-limit": "^4.0.0",
        "pg": "^8.16.3",
        "winston": "^3.9.0",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "dotenv-cli": "^7.4.4",
        "nodemon": "^3.1.11",
        "prisma": "^6.19.0"
    }
}
